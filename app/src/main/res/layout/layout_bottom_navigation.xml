<com.google.android.material.bottomnavigation.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/bottomNavigation"

    android:layout_width="match_parent"

    android:layout_height="70dp"

    android:layout_gravity="bottom"

    android:background="@color/darkBrown"
    app:itemBackground="@android:color/transparent"

    app:layout_constraintBottom_toBottomOf="parent"

    app:layout_constraintEnd_toEndOf="parent"

    app:layout_constraintStart_toStartOf="parent"
    app:itemIconTint="@color/bottom_nav_icon_color"
    app:itemTextColor="@color/bottom_nav_text_color"
    app:itemRippleColor="@color/transparent_color"

    app:menu="@menu/bottom_navigation_menu">



    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_gravity="center_vertical">



        <LinearLayout

            android:layout_width="0dp"

            android:layout_height="match_parent"

            android:layout_weight="0.2"

            android:orientation="vertical">



            <ImageView

                android:id="@+id/home"

                android:layout_width="22dp"

                android:layout_height="22dp"

                android:layout_gravity="center"

                app:srcCompat="@drawable/baseline_home_24" />



            <TextView

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginTop="3sp"

                android:text="Home"

                android:textAlignment="center"

                android:textColor="@color/white"

                android:textSize="10sp" />

        </LinearLayout>



        <LinearLayout

            android:layout_width="0dp"

            android:layout_height="match_parent"

            android:layout_weight="0.2"

            android:orientation="vertical">



            <ImageView

                android:id="@+id/btnToDrinkDetail"

                android:layout_width="22dp"

                android:layout_height="22dp"

                android:layout_gravity="center"

                app:srcCompat="@drawable/baseline_coffee_24" />



            <TextView

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginTop="3sp"

                android:text="Drink Menu"

                android:textAlignment="center"

                android:textColor="@color/white"

                android:textSize="10sp" />

        </LinearLayout>



        <LinearLayout

            android:layout_width="0dp"

            android:layout_height="match_parent"

            android:layout_weight="0.2"

            android:orientation="vertical">



            <ImageView
                android:id="@+id/favorites"


                android:layout_width="22dp"

                android:layout_height="22dp"

                android:layout_gravity="center"

                app:srcCompat="@drawable/baseline_favorite_border_24" />



            <TextView

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginTop="3sp"

                android:text="Favorites"

                android:textAlignment="center"

                android:textColor="@color/white"

                android:textSize="10sp" />

        </LinearLayout>



        <LinearLayout

            android:layout_width="0dp"

            android:layout_height="match_parent"

            android:layout_weight="0.2"

            android:orientation="vertical">



            <FrameLayout

                android:id="@+id/cartButtonContainerBottomNav"

                android:layout_width="13dp"

                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal">



                <ImageView

                    android:id="@+id/myCart"

                    android:layout_width="22dp"

                    android:layout_height="22dp"

                    android:layout_gravity="center"

                    app:srcCompat="@drawable/btn_2" />



                <TextView

                    android:id="@+id/cartCountTextViewBottomNav"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_gravity="top|end"

                    android:background="@drawable/cart_badge_background"

                    android:gravity="center"

                    android:paddingStart="4dp"

                    android:paddingEnd="4dp"

                    android:text="0"

                    android:textColor="@android:color/white"

                    android:textSize="12sp"

                    android:textStyle="bold"

                    android:visibility="gone" />



            </FrameLayout>



            <TextView

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginTop="3sp"

                android:text="My Cart"

                android:textAlignment="center"

                android:textColor="@color/white"

                android:textSize="10sp" />

        </LinearLayout>



        <LinearLayout

            android:layout_width="0dp"

            android:layout_height="match_parent"

            android:layout_weight="0.2"

            android:orientation="vertical">



            <ImageView

                android:layout_width="22dp"

                android:layout_height="22dp"

                android:layout_gravity="center"

                app:srcCompat="@drawable/btn_5" />



            <TextView

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginTop="3sp"

                android:text="Profile"

                android:textAlignment="center"

                android:textColor="@color/white"

                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.bottomnavigation.BottomNavigationView>